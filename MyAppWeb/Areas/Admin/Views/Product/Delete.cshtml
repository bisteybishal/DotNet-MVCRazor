@model MyAppModels.ViewModels.ProductVM

@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="border p-3 mt-3">
        <div class="row pb-2">
            <h3 class="text-primary">Delete Product</h3>
            <hr/>

   </div>
   <input type="hidden" asp-for="Product.Id"/>
   <div asp-validation-summary=All></div>
    <div class="row mb-3">
        <label asp-for="Product.ProductName"></label>
        <input disabled asp-for="Product.ProductName" class="form-control"/>
        <span asp-validation-for="Product.ProductName" class="text-primary"></span>
    </div>
    <div class="row mb-3">
        <label asp-for="Product.Price"></label>
        <input disabled asp-for="Product.Price" class="form-control"/>
          <span asp-validation-for="Product.Price" class="text-primary"></span>
    </div>
    <div class="row mb-3">
        <label asp-for="Product.Description"></label>
        <input disabled asp-for="Product.Description" class="form-control"/>
          <span asp-validation-for="Product.Description" class="text-primary"></span>
    </div>
    <div class="row mb-3">
        <label asp-for="Product.imageurl"></label>
        <input disabled asp-for="Product.imageurl" class="form-control"/>
          <span asp-validation-for="Product.imageurl" class="text-primary"></span>
    </div>
    
    <button class="btn btn-danger" type="submit">Delete</button>
    </div>
   
    <a asp-action="Index" asp-controller="Product">Back</a>
</form>
